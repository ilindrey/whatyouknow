/*******************************
         Theme Overrides
*******************************/

& when (@wyk_variationSegmentMain) {
  /* Main */
  .ui.main.segment {
    padding: @mainPadding;
    min-height: @mainMinHeight;
  }
}

& when (@wyk_variationSegmentFooter) {
  /* Footer */
  .ui.footer.segment {
    padding: @footerPadding;
  }
}